{
	"main": "./dist/main.js",
	"name": "defted-svelectro",
	"version": "0.0.1",
	"scripts": {
		"dev": "cross-env NODE_ENV=dev pnpm run dev:all",
		"dev:all": "concurrently --raw -n svelte,electron -c '#ff3e00,blue' \"pnpm run dev:svelte\" \"pnpm run dev:electron:watch\"",
		"dev:svelte": "cd ./renderer/ && vite dev",
		"dev:electron": "electron ./dist/main.js",
		"dev:electron:watch": "concurrently \"pnpm run watch:ts\" \"pnpm run watch:electron\"",
		"watch:ts": "tsc -w",
		"watch:electron": "nodemon --watch dist/main.js --exec \"electron ./dist/main.js\"",
		"start:electron": "electron .",
		"copy:ps": "copy src\\ps\\*.ps1 dist\\ps\\",
		"build": "tsc && pnpm run copy:ps && electron-builder build --win --config build.config.json",

		"build:svelte": "cd ./renderer/ && vite build",
		"build:electron": "tsc && electron-builder build --win --config build.config.json",
		"postinstall": "electron-builder install-app-deps",
		"postinstallarm64": "electron-builder install-app-deps --arch arm64",
		"start": "pnpm run build && electron ./dist/main.js"
	},
	"devDependencies": {
		"@biomejs/biome": "1.6.2",
		"@electron-toolkit/tsconfig": "^1.0.1",
		"@electron/notarize": "^2.3.0",
		"@fontsource/fira-mono": "^4.5.10",
		"@skeletonlabs/tw-plugin": "^0.3.1",
		"@types/electron": "^1.6.10",
		"@types/node": "^20.11.30",
		"autoprefixer": "^10.4.19",
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"electron": "^29.1.5",
		"electron-builder": "^24.13.3",
		"electron-reload": "2.0.0-alpha.1",
		"electron-vite": "^2.1.0",
		"nodemon": "^3.1.0",
		"ts-node": "^10.9.2",
		"tslib": "^2.6.2",
		"typescript": "^5.4.3",
		"vite": "^5.2.6",
		"wait-on": "^7.2.0"
	},
	"dependencies": {
		"@electron-toolkit/preload": "^3.0.0",
		"@electron-toolkit/utils": "^3.0.0",
		"dotenv": "^16.4.5",
		"electron-serve": "^1.3.0",
		"electron-store": "^8.2.0",
		"electron-updater": "^6.1.8",
		"electron-window-state": "^5.0.3"
	}
}
