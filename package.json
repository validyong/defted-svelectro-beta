{
	"main": "./dist/main.js",
	"name": "defted-svelectro-beta",
	"version": "0.0.1",
	"scripts": {
		"evstart": "electron-vite preview",
		"evdev": "electron-vite dev",
		"evprebuild": "electron-vite build",

		"dev:ts": "tsc -w",
		"dev:electron": "electron .",
		"dev:vite": "cd ./renderer/ && vite dev",
		"dev": "concurrently \"pnpm run dev:ts\" \"pnpm run dev:vite\" \"pnpm run dev:electron\"",

		"dev:all": "concurrently --kill-others --raw -n Typescript,Alias,Renderer,Electron -c 'bgBlue.bold,bgMagenta.bold,bgGreen.bold,bgCyan.bold' \"pnpm run dev:ts\" \"pnpm run dev:ts-alias\" \"pnpm run dev:svelte\" \"pnpm run dev:electron:watch\"",
		"dev:svelte": "cd ./renderer/ && vite dev",
		"dev:electron:watch": "nodemon --watch src --exec 'pnpm run dev:electron:reload'",
		"dev:electron:reload": "wait-on http://localhost:5174 && pnpm exec electron .",
		"watch:ts": "tsc -w",
		"start:electron": "electron .",

		"dev:ts-alias": "tsc-alias -w",

		"watch:electron": "nodemon --watch dist/main.js --exec \"electron ./dist/main.js\"",
		"copy:ps": "copy src\\ps\\*.ps1 dist\\ps\\",
		"copy:icon": "powershell -Command \"if (-not (Test-Path 'dist\\icon')) { mkdir 'dist\\icon' }; Copy-Item 'src\\icon\\*.ico' 'dist\\icon'\"",
		"build": "tsc && tsc-alias && pnpm run copy:ps && pnpm run copy:icon && electron-builder build --win --config build.config.json",
		"build:svelte": "cd ./renderer/ && vite build",
		"build:electron": "tsc && NODE_ENV=production electron-builder build --win --config build.config.json",
		"postinstall": "electron-builder install-app-deps",
		"postinstallarm64": "electron-builder install-app-deps --arch arm64",
		"start": "pnpm run build && electron ./dist/main.js"
	},
	"devDependencies": {
		"@biomejs/biome": "1.6.2",
		"@electron-toolkit/tsconfig": "^1.0.1",
		"@electron/notarize": "^2.3.0",
		"@fontsource/fira-mono": "^4.5.10",
		"@skeletonlabs/tw-plugin": "^0.3.1",
		"@types/electron": "^1.6.10",
		"@types/module-alias": "^2.0.4",
		"@types/node": "^20.11.30",
		"autoprefixer": "^10.4.19",
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"electron": "^29.1.5",
		"electron-builder": "^24.13.3",
		"electron-devtools-installer": "^3.2.0",
		"electron-reload": "2.0.0-alpha.1",
		"electron-vite": "^2.1.0",
		"nodemon": "^3.1.0",
		"prisma": "^5.12.1",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.8",
		"tsconfig-paths": "^4.2.0",
		"tslib": "^2.6.2",
		"typescript": "^5.4.3",
		"vite": "^5.2.6",
		"wait-on": "^7.2.0"
	},
	"dependencies": {
		"@electron-toolkit/preload": "^3.0.0",
		"@electron-toolkit/utils": "^3.0.0",
		"@prisma/client": "^5.12.1",
		"axios": "^1.6.8",
		"dotenv": "^16.4.5",
		"electron-serve": "^1.3.0",
		"electron-store": "^8.2.0",
		"electron-updater": "^6.1.8",
		"electron-window-state": "^5.0.3",
		"module-alias": "^2.2.3",
		"secure-electron-store": "^4.0.2",
		"sqlite": "^5.1.1"
	}
}
